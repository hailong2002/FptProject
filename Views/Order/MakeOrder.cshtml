@model FPTBook.Models.Order
@{
    Layout = "_Layout1";
}
<h2 class="text-center mt-5" style="color: #063547">Your Order</h2>
<div class="container" style="margin-bottom:400px; margin-top:25px">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>No</th>
                <th>Orderer's Name</th>
                <th>Date</th>
                <th>Title</th>
                <th>Quantity</th>
                <th>Total Price</th>
                <th>Cancel</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>@User.Identity.Name</td>
                <td>@DateTime.Now.</td>
                <td>@Model.OrderName</td>
                <td>@Model.OrderQuantity</td>
                <td>@Model.OrderPrice</td>
                <td>
                    <a class="btn btn-danger" asp-controller="Order" asp-action="Cancel"><i class="fa-regular fa-trash-can"></i></a>
                </td>
            </tr>
        </tbody>
    </table>

</div> 
