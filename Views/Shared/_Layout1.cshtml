                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Manage</a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated && User.IsInRole("BookOwner"))
                        {
                            <li class="nav-item active" style="margin-left:-325px; margin-right:360px;">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="Index">Manage</a>
                            </li>
                            <!--<li class="nav-item">
                                            <a class="nav-link text-info" asp-area="" asp-controller="Admin" asp-action="Manage">Book</a>
                                        </li>
                                        <li class="nav-item">
