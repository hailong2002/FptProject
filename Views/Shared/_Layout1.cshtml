                                        </li> -->
                        }
                        else{
                            <li class="nav-item active">
                                <a class="nav-link pl-lg-0" asp-controller="Client" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Client" asp-action="Store">Store</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Client" asp-action="About"> About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Client" asp-action="Blog"> Blog </a>
                            </li>
