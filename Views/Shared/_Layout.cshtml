<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPTBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <link rel="icon" href="images/favicon.png" type="image/gif" />
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />

    <title>FPTBook</title>

    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />
    <!-- font awesome style -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/6b57bdf61a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>

@* navbar-light bg-white border-bottom box-shadow mb-3"*@
  <body>
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm"
             style="background-color: #152928 ">
            <div class="container" >
                <a class="navbar-brand text-light" asp-area="" asp-controller="Client" asp-action="Index">FPTBook</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1" style="margin-left:100px">
                        @if(User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                        {
                            <li class="nav-item" style="margin-right:30px">
                                <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Index">Request Approval</a>
                            </li>
                            <li class="nav-item" style="margin-right:30px">
                                <a class="nav-link text-light" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                            </li>
                            <li class="nav-item" >
                                <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="Customer">User Account</a>
                            </li>
                           
                        }
                        @if (User.Identity.IsAuthenticated && User.IsInRole("BookOwner"))
                        {
                            <li class="nav-item" style="margin-right:30px">
                                <a class="nav-link text-light" asp-area="" asp-controller="Book" asp-action="Index">Book</a>
                            </li>
                            <li class="nav-item" style="margin-right:30px">
                                <a class="nav-link text-light" asp-area="" asp-controller="Category" asp-action="Request" >Request</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" style="margin-right:30px" asp-area="" asp-controller="Category" asp-action="Index">Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Order" asp-action="Record">Record</a>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
        </header>



    <div class="container" style="margin-top:80px">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="margin-top: 40px">
        <div class="container">
            &copy; 2022 - FPTBook - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
